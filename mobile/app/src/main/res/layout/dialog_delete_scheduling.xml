<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="296dp"
    android:layout_height="420dp"
    android:paddingBottom="38dp">

    <ImageButton
        android:id="@+id/ib_cancel_dialog_delete"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_marginTop="18.67dp"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_confirm_scheduling_delete"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/metropolis_bold"
        android:gravity="center"
        android:text="Apagar Agendamento?"
        android:textColor="@color/secondary"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="202dp"
        android:layout_height="144dp"
        android:layout_marginTop="21dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_scheduling_delete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_unit_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="@string/tv_unit"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_selected_unit_confirmation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="São Paulo"
                android:textColor="@color/secondary"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_day_of_week_confirmation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="@string/tv_day_of_week"
                android:textColor="@color/secondary"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_selected_confirmation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="Data: 15/09/2021"
                android:textColor="@color/secondary"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shift_confirmation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="@string/tv_shift_selected"
                android:textColor="@color/secondary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_shift_selected_confirmation_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/metropolis_regular"
                android:lineSpacingExtra=".5px"
                android:text="Manhã"
                android:textColor="@color/secondary"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/iv_delete_schedule"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        android:backgroundTint="@color/secondary"
        android:elevation="5.01dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btn_confirmation_delete"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="@+id/btn_confirmation_delete"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/btn_cancel_delete"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_shape_secondary"
        android:elevation="5dp"
        android:fontFamily="@font/metropolis_semibold"
        android:gravity="center"
        android:letterSpacing=".04"
        android:shadowColor="@color/gray"

        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/primary"
        android:textSize="16sp"
        app:iconTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_confirmation_delete" />

    <TextView
        android:id="@+id/btn_confirmation_delete"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:background="@drawable/btn_shape"
        android:backgroundTint="@color/secondary"
        android:elevation="5dp"
        android:fontFamily="@font/metropolis_semibold"
        android:letterSpacing=".04"
        android:gravity="center"
        android:shadowColor="@color/gray"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />




</androidx.constraintlayout.widget.ConstraintLayout>